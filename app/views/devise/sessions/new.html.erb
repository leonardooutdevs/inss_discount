<main class="form-sign w-100 m-auto">
  <%= simple_form_for(resource, as: resource_name, html: {'data-turbo' => "false"}, url: session_path(resource_name)) do |f| %>
    <%= logo %>

    <div class="form-floating mt-5">
      <%= f.email_field :email, class: 'form-control', value: '' %>
      <%= f.label :email, class: "form-label", for: 'user[email]' %>
    </div>

    <div class="form-floating">
      <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %>
      <%= f.label :password, class: "form-label" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="checkbox mb-3">
        <%= f.check_box :remember_me, class: 'form-check-input' %>
        <%= f.label :remember_me, class: 'form-check-label' %>
      </div>
    <% end %>

    <div class="mb-4 mt-4">
      <%= f.submit t('.sign_in'), class: "w-100 btn btn-lg btn-primary" %>
    </div>
  <% end %>

  <%= link_to t('.sign_up'), new_registration_path(resource_name), class: "w-100 btn btn-lg btn-link" %><br />
</main>
