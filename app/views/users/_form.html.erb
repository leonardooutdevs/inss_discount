<%= turbo_frame_tag dom_id(user), target: "_top" do %>
  <%= simple_form_for [user], html: { class: 'needs-validation', id: dom_id(user) }  do |f| %>
    <div class='row'>
      <div class='col-8'>
        <%= f.label :email, t('.email'), class: 'visually-hidden' %>
        <%= f.input :email, label: false %>
      </div>
      <div class='col'>
        <%= f.submit t('save'), class: 'btn btn-sm btn-primary' %>
        <%= link_to t('cancel'),
            url_for([user]),
            class: 'btn btn-link text-secondary',
            data: { 'turbo-stream' => true } %>
      </div>
    </div>
  <% end %>
<% end %>
