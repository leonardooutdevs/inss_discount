<%= turbo_frame_tag dom_id(access_level), target: "_top" do %>
  <%= simple_form_for [access_level], html: { class: 'needs-validation', id: dom_id(access_level) }  do |f| %>
    <div class='row'>
      <div class='col-4'>
        <%= f.label :name, t('.name'), class: 'visually-hidden' %>
        <%= f.input :name, label: false %>
      </div>
      <div class='col-4'>
        <%= f.label :kind, t('.kind'), class: 'visually-hidden' %>
        <%= f.input :kind, label: false %>
      </div>
      <div class='col'>
        <%= f.submit t('save'), class: 'btn btn-sm btn-primary' %>
        <%= link_to t('cancel'),
            url_for([access_level]),
            class: 'btn btn-link text-secondary',
            data: { 'turbo-stream' => true } %>
      </div>
    </div>
  <% end %>
<% end %>
